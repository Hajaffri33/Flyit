<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="340dp"
        android:layout_height="173dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/bestscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="21dp"
        android:fontFamily="sans-serif"
        android:text="20"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:textSize="100dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bestscore_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bestscore"
        android:layout_marginTop="-19dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_centerHorizontal="true"
        android:text="Best Score"
        android:textColor="@color/colorAccent"
        android:textSize="25dp" />

    <Button
        android:id="@+id/main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bestscore_text"
        android:layout_marginTop="31dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_button_main" />

    <Button
        android:id="@+id/button_stats"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/main_button"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="58dp"
        android:width="50dp"
        android:height="50dp"
        android:background="@drawable/cirlce_button_secondary" />

    <Button
        android:id="@+id/button_share"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/main_button"
        android:layout_alignLeft="@+id/button_stats"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/cirlce_button_secondary" />

    <Button
        android:id="@+id/button_ads"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/main_button"
        android:layout_alignRight="@+id/button_stats"
        android:layout_marginTop="60dp"
        android:layout_marginRight="-250dp"
        android:background="@drawable/cirlce_button_secondary" />



</RelativeLayout>
